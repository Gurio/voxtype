{
  "productName": "voxtype",
  "version": "0.1.0",
  "identifier": "app.voxtype.voice",
  "build": {
    "beforeDevCommand": "npm run vite:dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run vite:build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "overlay",
        "title": "voxtype",
        "url": "index.html",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true,
        "resizable": false,
        "width": 520,
        "height": 200,
        "skipTaskbar": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' https://api.openai.com"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

