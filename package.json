{
  "name": "voxtype",
  "version": "0.1.0",
  "description": "Speech to text under a cursor (keyless text typing)",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:debug": "npm run vite:build && cd src-tauri && cargo build",
    "build:release": "npm run vite:build && cd src-tauri && cargo build --release",
    "build:deb": "tauri build --bundles deb",
    "build:appimage": "tauri build --bundles appimage",
    "build:linux": "tauri build --bundles deb,appimage",
    "clean": "rimraf src-tauri/target dist",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "test:local": "npm run build:release && ./src-tauri/target/release/voxtype"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.2.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-global-shortcut": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.4",
    "typescript": "^5.7.0",
    "vite": "^7.2.2"
  }
}

